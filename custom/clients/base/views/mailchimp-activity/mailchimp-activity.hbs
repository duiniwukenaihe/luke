<link rel="stylesheet" type="text/css" href="custom/themes/mailchimp-styles.css">
<h3>{{str "LBL_MAILCHIMP_LISTS"}}</h3>
<div class="row-fluid">
    <div class="span12">
        {{#each dashletConfig.mailchimp_lists}}
            {{field ../this model=../this.settings template="edit"}}
        {{/each}}
    </div>
</div>
{{#if activities}}
    {{#each activities}}
        <div class="tesimonial-main">
            <div class="date-box">
                <date>{{date}}</date>
                <time>{{time}}</time>
                <div class="icon-box">
                    <i class="fa {{action_class}}"></i>
                </div>
            </div>
            <div class="tesimonial-box left-arrow">
                <div class="notification-heading">
                    <p>{{action}}</p>
                </div>
                <p>{{title}}</p>
                {{#if eepurl}}
                    <h5 class="email-link"><span>{{str "LBL_MAILCHIMP_VIEW_EMAIL"}} </span><a href="{{eepurl}}" target="_blank">{{eepurl}}</a></h5>
                {{/if}}
            </div>
        </div>
    {{/each}}
{{else}}
    {{#if list_id}}
        <div class="no-record">{{str "LBL_MAILCHIMP_NO_ACTIVITY_FOUND"}}</div>
    {{/if}}
{{/if}}
