<form method="post" action="{{ url('loginProcess') }}">
    {% if providers is defined %}
    <fieldset title="Authentication Provider">
        {% if provider is not defined %}
            {% set provider = providers|keys|first %}
        {% endif %}
        {% for value, title in providers %}
        <label>
            <input
                    type="radio"
                    name="provider"
                    value="{{ value }}"
                    {% if provider == value %}checked="checked"{% endif %}
            /> {{ title }}</label>
        {% endfor %}
    </fieldset>
    <br/>
    {% endif %}
    <label>User name <input type="text" name="user_name" value="{{ user_name|default('') }}"/></label>
    <label>User password <input type="password" name="password"/></label>
    <input type="submit" value="Login"/>
</form>

{% if messages is defined %}
    <br/>
    {{ messages|join('<br/>')|raw}}
{% endif %}
